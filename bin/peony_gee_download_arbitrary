#!/usr/bin/env python
# -*- coding: utf-8 -*-

import click

@click.command()
@click.option('-g', '--geojson')
@click.option('-o', '--output')
@click.option('-c', '--collection')
def main(geojson, output, collection):
    import geedim as gd
    coll = gd.MaskedCollection.from_name(collection)
    coll = coll.search(region=polygon)
    comp_im = coll.composite(region=polygon)
    comp_im.download(output, region=polygon, crs="EPSG:4326", scale=10, max_tile_size=16)

if __name__ == '__main__':
    pass
